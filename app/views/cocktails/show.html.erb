<div class="container text-center">
    <div class="small-container">

    <h1><%= @cocktail.name %></h1>
    <table>
      <tr>
        <th>Ingredients</th>
        <th>Doses</th>
        <td><%= link_to new_cocktail_dose_path(@cocktail), class: "btn btn-default" do %>
         <i class="fa fa-plus-circle" aria-hidden="true"></i>
         <% end %>
        </td>
      </tr>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <td><%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-link" %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "All cocktails", cocktails_path, class: "btn btn-default" %>
    </div>
</div>
